{
  "name": "omnicoach",
  "version": "1.0.0",
  "description": "AI-powered productivity and wellness assistant",
  "main": "src/main/main.js",
  "homepage": "./",
  "author": "Wes",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:sequential",
    "dev:concurrent": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:sequential": "npm-run-all --parallel --race dev:react dev:electron:delayed",
    "dev:electron:delayed": "wait-on http://localhost:3281 && npm run dev:electron",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:react": "cross-env BROWSER=none PORT=3281 react-scripts start",
    "build": "react-scripts build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "electron": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "npm-run-all": "^4.1.5",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "recharts": "^2.8.0",
    "wait-on": "^8.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.8.1",
    "postcss": "^8.4.32",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.6"
  },
  "build": {
    "appId": "com.omnicoach.app",
    "productName": "OmniCoach",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "src/shared/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraMetadata": {
      "main": "src/main/main.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
